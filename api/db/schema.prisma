datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = "native"
}

model Comment {
  id        Int     @id @default(autoincrement())
  originId  String
  line      Int
  utterance String
  meeting   Meeting @relation(fields: [meetingId], references: [id])
  meetingId Int
  speaker   Speaker @relation(fields: [speakerId], references: [id])
  speakerId Int
}

model Speaker {
  id          Int       @id @default(autoincrement())
  comment     Comment[]
  name        String
  url         String
  description String
}

model Meeting {
  id         Int       @id @default(autoincrement())
  prefecture String
  volume     String
  number     Int
  year       Int
  month      Int
  day        Int
  datetime   DateTime
  title      String
  comment    Comment[]
}
